@page
@model Memories.Areas.Identity.Pages.Account.ChangePasswordModel
@using DevExtreme.AspNet.Mvc
@{
    Layout = "~/Pages/Shared/_MainLayout.cshtml";

}
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-header d-flex justify-content-between align-items-center">
                            @sharedResource["Change Password"]
                        </h2>
                    </div>
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <br />
                        <form id="form" method="post">
                            @(Html.DevExtreme().Form<Memories.ViewModel.ChangePasswordVM>()
        .FormData(Model.changePasswordVM)
        .Items(items =>
        {


            items.AddSimpleFor(m => m.CurrentPassword).IsRequired(true).Label(k => k.Text(sharedResource["Current Password"])).Editor(e => e.TextBox().Mode(TextBoxMode.Password));
            items.AddSimpleFor(m => m.NewPassword).IsRequired(true).Label(k => k.Text(sharedResource["New Password"])).Editor(e => e.TextBox().Mode(TextBoxMode.Password));

            items.AddSimpleFor(m => m.ConfirmPassword).IsRequired(true).Label(k => k.Text(sharedResource["Confirm Password"])).Editor(e => e.TextBox().Mode(TextBoxMode.Password));
            

            items.AddButton()
                        .ColSpan(3)
                        .HorizontalAlignment(HorizontalAlignment.Right)
                        .ButtonOptions(b => b.Text(sharedResource["Save"])
                        .Type(ButtonType.Success)
                        .UseSubmitBehavior(true)).CssClass("invers");
        })
)
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

